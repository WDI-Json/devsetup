{
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.fontSize": 16,
  "editor.hover.delay": 500,
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 30,
  "editor.wordWrap": "on",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue": "html",
    "twig": "html",
    "postcss": "css"
  },
  "emmet.syntaxProfiles": { "postcss": "css" },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "explorer.decorations.colors": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": { "*.twig": "html", ".gitmodules": "properties" },
  "files.autoSave": "onWindowChange",
  "git.allowForcePush": true,
  "git.allowNoVerifyCommit": true,
  "git.autofetch": true,
  "github.gitProtocol": "ssh",
  "gitlens.codeLens.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "security.workspace.trust.enabled": false,
  "terminal.integrated.fontSize": 15,
  "window.autoDetectColorScheme": true,
  "window.commandCenter": true,
  "workbench.enableExperiments": false,
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "zenMode.fullScreen": false,
  "php.suggest.basic": false,
  "css.validate": false, // For stylelint
  "scss.validate": false, // For stylelint
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "trailing",
  "[html][php][xml]": {
    "editor.linkedEditing": true
  },
  "[xml][csv][yaml][plaintext]": {
    "editor.wordWrap": "off"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml",
    "files.insertFinalNewline": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "gitlens.showWhatsNewAfterUpgrades": false,
  "workbench.colorTheme": "Atom One Dark",
  "editor.fontFamily": "Cascadia Mono, Consolas, 'Courier New', monospace", //after install of fonts. Windows only!
  "prettier.semi": false,
  "javascript.format.semicolons": "remove",
}
